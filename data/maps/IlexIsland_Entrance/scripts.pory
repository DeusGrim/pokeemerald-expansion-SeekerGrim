raw `
IlexIsland_Entrance_MapScripts::
	map_script MAP_SCRIPT_ON_TRANSITION, IlexIsland_Entrance_OnTransition
	.byte 0

IlexIsland_Entrance_OnTransition:
	setflag FLAG_ARRIVED_ON_ILEX_ISLAND
	end

IlexIsland_Entrance_EventScript_SetCloudsWeather::
	setweather WEATHER_SUNNY_CLOUDS
	doweather
	end

IlexIsland_Entrance_EventScript_ClearWeather::
	setweather WEATHER_NONE
	doweather
	end

IlexIsland_Entrance_EventScript_Sailor::
	lock
	faceplayer
	msgbox IlexIsland_Entrance_Text_SailorReturn, MSGBOX_YESNO
	goto_if_eq VAR_RESULT, NO, IlexIsland_Entrance_EventScript_AsYouLike
	msgbox EventTicket_Text_SailHome, MSGBOX_DEFAULT
	closemessage
	applymovement VAR_LAST_TALKED, Common_Movement_WalkInPlaceFasterDown
	waitmovement 0
	delay 30
	hideobjectat LOCALID_ILEX_ISLAND_SAILOR, MAP_ILEX_ISLAND_ENTRANCE
	setvar VAR_0x8004, LOCALID_ILEX_ISLAND_SS_TIDAL
	call Common_EventScript_FerryDepartIsland
	warp MAP_LILYCOVE_CITY_HARBOR, 8, 11
	waitstate
	release
	end

IlexIsland_Entrance_EventScript_AsYouLike::
	msgbox EventTicket_Text_AsYouLike, MSGBOX_DEFAULT
	release
	end
	
IlexIsland_Entrance_Text_SailorReturn:
	.string "CAPT. BRINEY can be so maddeningly\n"
	.string "fickleâ€¦\p"
	.string "Do you want to return to LILYCOVE?$"
`
